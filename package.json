{
  "name": "giftsity-server",
  "version": "1.0.0",
  "description": "Giftsity - The Gift Marketplace",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"nodemon server/index.js\" \"nodemon server-seller/index.js\" \"nodemon server-corporate/index.js\"",
    "dev:main": "nodemon server/index.js",
    "dev:seller": "nodemon server-seller/index.js",
    "dev:corporate": "nodemon server-corporate/index.js",
    "start": "node server/index.js",
    "start:seller": "node server-seller/index.js",
    "start:corporate": "node server-corporate/index.js",
    "seed": "node server/seed.js",
    "migrate:identity:dry": "node server/scripts/migrate-identity-split.js --dry-run",
    "migrate:identity": "node server/scripts/migrate-identity-split.js --execute",
    "test:flow": "node server/scripts/test-app-flow.js",
    "test:flow:section": "node server/scripts/test-app-flow.js --section"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "cloudinary": "^2.9.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.16",
    "pdfkit": "^0.17.2",
    "resend": "^6.9.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.33.2",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.9"
  }
}
