{
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [{ "type": "host", "value": "www.giftsity.com" }],
      "destination": "https://giftsity.com/:path",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "https://giftsity-server.onrender.com/api/sitemap.xml" },
    { "source": "/((?!assets/).*)", "destination": "/index.html" }
  ]
}
